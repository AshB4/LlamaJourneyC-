@inherits LayoutComponentBase


<PageTitle>Home</PageTitle>
<MudThemeProvider />

<MudLayout>
    
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        
        <MudBreadcrumbs Items="_items" Color="Color.White" />
    </MudAppBar>
    <MudDrawer Open="true">
        <MudDrawer @bind-Open="@_drawerOpen" Elevation="1">

            <MudText Typo="Typo.h5" Class="mt-1"> MudBlazor</MudText>

            <NavMenu />
        </MudDrawer>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>

</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private List<BreadcrumbItem> _items = new List<BreadcrumbItem>
{
        new BreadcrumbItem("Home", href: "/home", icon: Icons.Material.Filled.Home ),
        new BreadcrumbItem("Interview", href: "/interview", icon: Icons.Material.Filled.Work),
        new BreadcrumbItem("Amortization", href: "/amortization", icon: Icons.Material.Filled.Calculate)
    };
}